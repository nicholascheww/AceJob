@page
@model AceJobAgency.Pages.RegisterModel
@{
}

<head>
    <script src="https://www.google.com/recaptcha/api.js?render=6Ld8p9AqAAAAAMfSabmgfDNowBl6Rc-XL1TniU6s"></script>
</head>

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-6">
            <h1 class="mb-3">Register</h1>
            <form method="post" enctype="multipart/form-data" id="registerForm">
                <div asp-validation-summary="All" class="text-danger"></div>

                <label asp-for="RModel.FirstName">First Name</label>
                <input type="text" asp-for="RModel.FirstName" class="form-control" required pattern="^[a-zA-Z]+$" title="Only letters are allowed" />

                <label asp-for="RModel.LastName">Last Name</label>
                <input type="text" asp-for="RModel.LastName" class="form-control" required pattern="^[a-zA-Z]+$" title="Only letters are allowed" />

                <label asp-for="RModel.Gender">Gender</label>
                <select asp-for="RModel.Gender" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>

                <label asp-for="RModel.Email">Email Address</label>
                <input type="email" asp-for="RModel.Email" class="form-control" required
                       pattern="@( @"^[\w-\.]+@([\w-]+\.)+[\w-]{2,4}$" )"
                       title="Please enter a valid email" 
                />
                <label asp-for="RModel.Password">Password</label>
                <input type="password" asp-for="RModel.Password" class="form-control" required minlength="8" title="Password must be at least 8 characters long" />

                <label asp-for="RModel.ConfirmPassword">Confirm Password</label>
                <input type="password" asp-for="RModel.ConfirmPassword" class="form-control" required />

                <label asp-for="RModel.DateOfBirth">Date of Birth</label>
                <input type="date" asp-for="RModel.DateOfBirth" class="form-control" required />

                <label asp-for="RModel.Resume">Upload Resume</label>
                <input type="file" asp-for="RModel.Resume" class="form-control" accept=".pdf,.docx" required />

                <input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response" />

                <button type="submit" class="btn btn-primary mt-3" id="registerBtn">Register</button>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById("registerForm").addEventListener("submit", function (event) {
        event.preventDefault(); // Prevent normal form submission

        grecaptcha.ready(function () {
            grecaptcha.execute("6Ld8p9AqAAAAAMfSabmgfDNowBl6Rc-XL1TniU6s", { action: "register" }).then(function (token) {
                console.log("Generated reCAPTCHA Token:", token);
                document.getElementById("g-recaptcha-response").value = token;
                document.getElementById("registerForm").submit();
            });
        });
    });
</script>

